<Page x:Class="RibbonApp.Pages.DefaultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RibbonApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="DefaultPage">

    <StackPanel>
        <DataGrid AutoGenerateColumns="True" x:Name="grid1" ItemsSource="{Binding Path=Data}"  
                  Style="{StaticResource dataGridStyle}" CellStyle="{StaticResource datagridCell}" 
                 InitializingNewItem="grid1_InitializingNewItem"
                  >

        </DataGrid>
        
    </StackPanel>
</Page>
